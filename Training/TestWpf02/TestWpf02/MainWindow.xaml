<Window x:Class="TestWpf02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="355" Width="300">
    <Canvas>
        <Rectangle Canvas.Left="20" Canvas.Top="24" Height="100" Width="200"
                   Stroke="Black"
                   Fill="AliceBlue"/>
        <Ellipse Canvas.Left="50" Canvas.Top="50" Height="100" Width="100"
                 Stroke="Navy"
                 Fill="RoyalBlue"
                 StrokeThickness="2"
                 Opacity="0.5"/>
        <Ellipse Canvas.Left="70" Canvas.Top="24" Height="100" Width="150"
                 Stroke="Navy"
                 Fill="Salmon"
                 StrokeThickness="2"
                 Opacity="0.6"/>
        <Polygon Stroke="Red"
                 StrokeThickness="3"
                 Fill="Wheat"
                 Opacity="0.2"
                 Points="0,0 75,50 30,150 100,200 125,250 270,150 200,50"/>
        <Polygon Stroke="Green"
                 StrokeThickness="3"
                 Fill="SeaGreen"
                 Opacity="0.6"
                 Points="0,0 75,50 30,150"
                 Canvas.Left="100"
                 Canvas.Top="60"/>
    </Canvas>
</Window>
